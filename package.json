{
  "name": "@rewardup-inc/digital-card",
  "version": "1.0.0",
  "description": "React component for RewardUp digital card preview",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rewardup-inc/digital-card.git"
  },
  "author": "RewardUp",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rewardup-inc/digital-card/issues"
  },
  "homepage": "https://github.com/rewardup-inc/digital-card#readme",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=17.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/rewardup-digital-card.esm.js",
  "size-limit": [
    {
      "path": "dist/rewardup-digital-card.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/rewardup-digital-card.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.0.0",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "husky": "^8.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "size-limit": "^8.0.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@types/styled-components": "^5.1.25",
    "qrcode.react": "^3.1.0",
    "styled-components": "^5.3.5"
  }
}
